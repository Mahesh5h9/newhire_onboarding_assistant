# Google Cloud / AI Studio Configuration
# For Vertex AI:
GOOGLE_GENAI_USE_VERTEXAI=true
GOOGLE_CLOUD_PROJECT=<YOUR_PROJECT_ID>              # e.g., newhire-onboarding-assistant
GOOGLE_CLOUD_LOCATION=<YOUR_REGION>                 # e.g., us-central1
#GOOGLE_APPLICATION_CREDENTIALS=<PATH_TO_CREDENTIALS_JSON>

# For Google AI Studio (alternative):
#GOOGLE_GENAI_USE_VERTEXAI=false
#GOOGLE_API_KEY=<YOUR_GOOGLE_API_KEY>

# PostgreSQL Database Configuration
DB_HOST=<DB_HOST>                                   
DB_PORT=<DB_PORT>                                   
DB_NAME=<DB_NAME>                                   
DB_USER=<DB_USER>                                   
DB_PASSWORD=<DB_PASSWORD>                           
DB_SSLMODE=<SSL_MODE>                               

# ToolBox
URL=<TOOLBOX_URL>                                   

# GitHub
GITHUB_PERSONAL_ACCESS_TOKEN=<GITHUB_PAT>           # Your GitHub personal access token

# Logging Configuration (optional)
APP_NAME=<APP_NAME>                                 # e.g., newhire-onboarding-assistant
LOG_LEVEL=<LOG_LEVEL>                               # e.g., INFO

# ADK Model Configuration (optional)
ADK_MODEL=<ADK_MODEL_NAME>                          # e.g., gemini-2.5-flash
